# ===========================================
# France Learn App - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# DATABASE
# ===========================================
# Local development:
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# Railway PostgreSQL (will be auto-set by Railway addon):
# DATABASE_URL=postgresql://user:pass@host:port/dbname

SQL_ECHO=false

# ===========================================
# AUTHENTICATION
# ===========================================
# IMPORTANT: Generate a secure random key for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# APPLICATION
# ===========================================
DEBUG=false

# Local development:
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Production (replace with your Railway frontend URL):
# CORS_ORIGINS=https://your-frontend.up.railway.app

# ===========================================
# SEED USERS (Optional)
# ===========================================
# Admin user 1
ADMIN1_EMAIL=admin@example.com
ADMIN1_PASSWORD=your-secure-password
ADMIN1_NAME=Admin

# Admin user 2 (optional)
# ADMIN2_EMAIL=admin2@example.com
# ADMIN2_PASSWORD=your-secure-password
# ADMIN2_NAME=Admin 2

# ===========================================
# OPENAI (Optional - for AI features)
# ===========================================
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# FRONTEND (for frontend service)
# ===========================================
# Set this to your backend Railway URL:
# VITE_API_URL=https://your-backend.up.railway.app
